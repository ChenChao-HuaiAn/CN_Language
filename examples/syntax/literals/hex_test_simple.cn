// 简单的十六进制字面量测试

函数 主程序() {
    整数 a = 0x1000;
    整数 b = 0xFF;
    整数 c = 0xABCD;
    整数 d = 0X10;
    
    打印("0x1000 = ");
    打印(a);
    打印("\n");
    
    打印("0xFF = ");
    打印(b);
    打印("\n");
    
    打印("0xABCD = ");
    打印(c);
    打印("\n");
    
    打印("0X10 = ");
    打印(d);
    打印("\n");
    
    整数 sum = 0x10 + 0x20;
    打印("0x10 + 0x20 = ");
    打印(sum);
    打印("\n");
    
    返回 0;
}
