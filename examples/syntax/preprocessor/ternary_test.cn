// 三元运算符测试

函数 主函数() {
    // 基本用法
    变量 a = 10;
    变量 b = 20;
    变量 最大值 = (a > b) ? a : b;
    打印(最大值);
    
    // 嵌套三元运算符
    变量 x = 5;
    变量 y = 15;
    变量 z = 10;
    变量 最大数 = (x > y) ? ((x > z) ? x : z) : ((y > z) ? y : z);
    打印(最大数);
    
    // 三元运算符与表达式
    变量 结果 = (a + b > 25) ? (a * 2) : (b * 2);
    打印(结果);
    
    // 布尔条件
    变量 是偶数 = (a % 2 == 0) ? 真 : 假;
    打印(是偶数);
    
    // 字符串结果
    变量 状态 = (a > 0) ? "正数" : "非正数";
    打印(状态);
}
