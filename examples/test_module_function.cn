// 测试模块内函数声明和调用
模块 数学工具 {
    整数 基数 = 100;
    
    函数 加法(整数 a, 整数 b) {
        返回 a + b;
    }
    
    函数 乘法(整数 x, 整数 y) {
        返回 x * y;
    }
    
    函数 计算(整数 n) {
        整数 结果 = 加法(n, 基数);
        返回 乘法(结果, 2);
    }
}

函数 主函数() {
    // 调用模块内的函数
    整数 结果1 = 数学工具.加法(10, 20);
    打印整数(结果1);  // 应该输出 30
    
    整数 结果2 = 数学工具.乘法(5, 6);
    打印整数(结果2);  // 应该输出 30
    
    整数 结果3 = 数学工具.计算(50);
    打印整数(结果3);  // 应该输出 (50+100)*2 = 300
    
    返回 0;
}
