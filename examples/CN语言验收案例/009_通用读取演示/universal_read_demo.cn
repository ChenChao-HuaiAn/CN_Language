// 通用读取演示
// 演示使用 读取() 函数自动识别用户输入类型

函数 主程序() 
{
    // 演示1：直接使用读取行获取字符串
    打印("请输入您的名字：");
    字符串 名字 = 读取行();
    打印("您好，");
    打印(名字);
    打印("\n");
    
    // 演示2：读取整数
    打印("请输入一个整数：");
    整数 数值;
    读取整数(&数值);
    打印("您输入的整数是：");
    打印(数值);
    打印("\n");
    
    // 演示3：读取小数
    打印("请输入一个小数：");
    小数 浮点数;
    读取小数(&浮点数);
    打印("您输入的小数是：");
    打印(浮点数);
    打印("\n");
    
    // 演示4：计算结果
    整数 倍数 = 数值 * 2;
    打印("整数的两倍是：");
    打印(倍数);
    打印("\n");
    
    返回 0;
}
