        打印("结果: ");
        打印(测试年份2);
        打印(" 不是闰年 ✗\n\n");
    }

    打印("测试年份3: ");
    打印(测试年份3);
    打印("\n");
    如果 (是闰年(测试年份3)) {
        打印("结果: ");
        打印(测试年份3);
        打印(" 是闰年 ✓\n\n");
    } 否则 {
        打印("结果: ");
        打印(测试年份3);
        打印(" 不是闰年 ✗\n\n");
    }

    打印("测试年份4: ");
    打印(测试年份4);
    打印("\n");
    如果 (是闰年(测试年份4)) {
        打印("结果: ");
