    打印("=============================\n\n");

    // 闰年判断规则：
    // 1. 能被4整除但不能被100整除的年份是闰年
    // 2. 能被400整除的年份是闰年
    // 3. 其他情况都不是闰年

    // 测试多个年份
    变量 测试年份1 = 2020;  // 闰年
    变量 测试年份2 = 2021;  // 平年
    变量 测试年份3 = 1900;  // 平年（能被100整除但不能被400整除）
    变量 测试年份4 = 2000;  // 闰年（能被400整除）
    变量 测试年份5 = 2024;  // 闰年（能被4整除但不能被100整除）

    打印("测试年份1: ");
    打印(测试年份1);
    打印("\n");
    如果 (是闰年(测试年份1)) {
        打印("结果: ");
        打印(测试年份1);
        打印(" 是闰年 ✓\n\n");
    } 否则 {
        打印("结果: ");
        打印(测试年份1);
        打印(" 不是闰年 ✗\n\n");
    }

