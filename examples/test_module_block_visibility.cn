// 测试块级可见性控制（类似 C++ 风格）

模块 配置模块 {
    // 默认为私有
    整数 私有计数器 = 0;
    整数 内部值 = 100;
    
    公开:
    // 公开块开始，之后的成员都是公开的
    整数 版本号 = 1;
    整数 最大连接数 = 100;
    字符串 应用名称 = "测试应用";
    
    私有:
    // 私有块开始，之后的成员都是私有的
    整数 密钥 = 12345;
    整数 内部标志 = 0;
    
    公开:
    // 再次切换到公开
    整数 端口号 = 8080;
}

函数 主程序() {
    // 访问公开成员 - 应该成功
    变量 v = 配置模块.版本号;
    变量 m = 配置模块.最大连接数;
    变量 p = 配置模块.端口号;
    
    // 尝试访问私有成员 - 应该失败
    // 变量 k = 配置模块.密钥;
    // 变量 c = 配置模块.私有计数器;
    
    返回 v;
}
