// 完整的模块系统测试示例

// 定义一个数学工具模块
模块 数学工具 {
    整数 PI值 = 314;
    整数 最大值 = 100;
    整数 调试模式 = 1;
}

// 定义一个配置模块
模块 配置 {
    整数 版本号 = 1;
    整数 最大用户数 = 1000;
}

// 导入模块（语法支持，语义暂不实现）
导入 数学工具;
导入 配置;

// 主函数测试模块成员访问
函数 主程序() {
    // 访问数学工具模块的成员
    变量 圆周率 = 数学工具.PI值;
    变量 最大 = 数学工具.最大值;
    变量 调试 = 数学工具.调试模式;
    
    // 访问配置模块的成员
    变量 版本 = 配置.版本号;
    变量 用户数 = 配置.最大用户数;
    
    // 使用模块成员进行计算
    变量 结果 = 圆周率 + 最大;
    
    返回 结果;
}
