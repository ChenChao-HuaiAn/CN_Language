// 测试函数返回类型声明语法

// 返回整数类型
函数 Fuc_数学_求和(整数 int_数学_a, 整数 int_数学_b) -> 整数
{
    返回 int_数学_a + int_数学_b;
}

// 返回小数类型
函数 Fuc_数学_求圆的面积(小数 float_数学_半径) -> 小数
{
    返回 3.14159 * float_数学_半径 * float_数学_半径;
}

// 返回布尔类型
函数 Fuc_数学_是偶数(整数 int_数学_n) -> 布尔
{
    返回 (int_数学_n % 2) == 0;
}

// 返回字符串类型
函数 Fuc_字符串_获取问候语() -> 字符串
{
    返回 "你好，世界！";
}

// 返回空类型（无返回值）
函数 Fuc_系统_打印消息() -> 无
{
    打印("这是一条消息");
}

// 不显式声明返回类型（通过返回语句推断）
函数 Fuc_数学_求积(整数 int_数学_a, 整数 int_数学_b)
{
    返回 int_数学_a * int_数学_b;
}

// 主程序：测试各种返回类型
函数 主程序() -> 整数
{
    // 测试整数返回
    变量 int_测试_和 = Fuc_数学_求和(10, 20);
    打印("10 + 20 = ");
    打印(int_测试_和);
    打印("\n");
    
    // 测试小数返回
    变量 float_测试_面积 = Fuc_数学_求圆的面积(5.0);
    打印("半径为5的圆面积 = ");
    打印(float_测试_面积);
    打印("\n");
    
    // 测试布尔返回
    变量 bool_测试_结果1 = Fuc_数学_是偶数(4);
    变量 bool_测试_结果2 = Fuc_数学_是偶数(5);
    打印("4是偶数: ");
    打印(bool_测试_结果1);
    打印("\n");
    打印("5是偶数: ");
    打印(bool_测试_结果2);
    打印("\n");
    
    // 测试字符串返回
    变量 str_测试_问候 = Fuc_字符串_获取问候语();
    打印(str_测试_问候);
    打印("\n");
    
    // 测试空返回
    Fuc_系统_打印消息();
    打印("\n");
    
    // 测试类型推断
    变量 int_测试_积 = Fuc_数学_求积(6, 7);
    打印("6 * 7 = ");
    打印(int_测试_积);
    打印("\n");
    
    返回 0;
}
