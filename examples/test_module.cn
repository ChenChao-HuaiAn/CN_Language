// 模块系统测试程序
模块 数学工具 {
    // 模块内的函数
    函数 整数 加(整数 a, 整数 b) {
        返回 a + b;
    }
    
    函数 整数 减(整数 a, 整数 b) {
        返回 a - b;
    }
    
    函数 整数 乘(整数 a, 整数 b) {
        返回 a * b;
    }
    
    函数 小数 除(整数 a, 整数 b) {
        如果 (b == 0) {
            打印("错误：除数不能为零");
            返回 0;
        }
        返回 a / b;
    }
}

模块 字符串工具 {
    函数 字符串 连接(s1, s2) {
        返回 s1 + s2;
    }
    
    函数 变量 重复(s, n) {
        变量 结果 = "";
        整数 i = 0;
        当 (i < n) {
            结果 = 结果 + s;
            i = i + 1;
        }
        返回 结果;
    }
}

函数 主程序() {
    打印("=== 模块系统测试 ===");
    
    // 测试数学工具模块
    打印("测试数学工具模块:");
    变量 和 = 数学工具.加(10, 5);
    变量 差 = 数学工具.减(10, 5);
    变量 积 = 数学工具.乘(10, 5);
    变量 商 = 数学工具.除(10, 5);
    
    打印("10 + 5 = " + 和);
    打印("10 - 5 = " + 差);
    打印("10 * 5 = " + 积);
    打印("10 / 5 = " + 商);
    
    // 测试字符串工具模块
    打印("\n测试字符串工具模块:");
    变量 连接结果 = 字符串工具.连接("你好, ", "世界!");
    变量 重复结果 = 字符串工具.重复("CN", 3);
    
    打印("连接结果: " + 连接结果);
    打印("重复结果: " + 重复结果);
    
    // 测试模块隔离
    打印("\n测试模块隔离:");
    变量 模块1 = 数学工具;
    变量 模块2 = 字符串工具;
    
    打印("模块1类型: " + 类型名(模块1));
    打印("模块2类型: " + 类型名(模块2));
    
    打印("\n=== 模块系统测试完成 ===");
    返回 0;
}
