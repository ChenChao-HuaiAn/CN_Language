// CN Language 增强内核示例 - 逐步测试语法支持
// 更新 (2026-01-27): 迁移至新的运行时API

// 测试1: 全局变量
变量 int_计数 = 0;

// 测试2: 中断处理程序 (向量0)
函数 Fuc_定时器中断处理() {
    int_计数 = int_计数 + 1;
}

// 测试3: 简单函数
函数 Fuc_测试函数() {
    打印("Test\n");
}

// 测试4: 主函数
函数 kernel_main() {
    打印("CN Kernel\n");
    
    // 注册中断处理程序
    cn_rt_interrupt_register(0, Fuc_定时器中断处理);
    
    Fuc_测试函数();
    返回 0;
}
